<!DOCTYPE html>
<html lang="en">

<%- include('../include/head.ejs') %>

    <body>
        <%- include('../include/navbar.ejs') %>
            <h1>Cart</h1>
            <h2>Total Price : <%= cart.totalPrice ? cart.totalPrice : 0 %>
            </h2>
            <% if (cart.product1s.length > 0) { %>
                <div class="grid ">
                    <% for (let product of cart.product1s) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.title %>
                                </h1>
                            </header>

                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= product.price %>
                                </h2>
                                <h2 class="product__price">qty:
                                    <%= product.cartItem.quantity %>
                                </h2>
                                <p class="product__description">
                                    <%= product.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <a href="/product/<%= product.id %>" class="btn">Details</a>
                                <form action="/delete-cart" method="POST">
                                    <button class="btn">Remove Item</button>
                                    <input type="hidden" name="productId" value="<%= product.id %>">
                                </form>
                            </div>
                        </article>
                        <% } %>
                </div>

                <div>
                    <hr>
                    <form action="/create-order" method="post">
                        <button type="submit" class="btn">Order Now</button>
                    </form>
                </div>


                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>